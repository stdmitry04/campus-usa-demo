# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-random-string
DEBUG=True
DOCKER=False

# Database (optional - defaults to SQLite if not provided)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# AWS S3 (optional - defaults to local storage if not provided)
# Set USE_S3_STORAGE=False to disable S3 and use local file storage
USE_S3_STORAGE=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=college-app-demo
AWS_S3_REGION_NAME=us-east-1

# OpenAI API (required for AI features)
# Get your key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Redis (optional - defaults to localhost)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Qdrant Vector Database (optional - defaults to localhost)
QDRANT_URL=http://localhost:6333

# Celery (optional)
USE_ASYNC_TASKS=True

# Security (optional)
ENABLE_VIRUS_SCANNING=False
ENABLE_CONTENT_ANALYSIS=False

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
